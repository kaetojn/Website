doctype html
html
    head
        title Search Tutors
        script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js")
        script(src="http://use.edgefonts.net/josefin-sans:n1,n4:default.js" type="text/javascript")
        script(src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
        link(rel="stylesheet", href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
        link(href="stylesheets/style-search.css" rel="stylesheet" type="text/css")
        script(src="javascripts/search_controller.js")

    body(ng-app='searchApp' ng-controller='searchctrl')
        .header
            h1(id="thing") Toronto Tutor
            <br></br>
            hr(width="0.00001%")
            .row
                .center
                    .col-sm-7
                        input(type='text' class='form-control' placeholder='Search...' ng-model='text')
                    .col-sm-2
                        <button type="button" class="btn btn-warning" ng-click="findMatching()">
                        <span class="glyphicon glyphicon-search"></span> Search
                        </button>

        .container
            h3
                strong Matching Tutors

            table(class='table table-striped')
                thead
                    tr
                        th Email
                        th Name
                        th Location
                        th Education
                        th Specialty

                tbody
                    tr(ng-repeat="result in results")
                        td <a href="mailto:nasir.m23@hotmail.com" target="_top">mail</a>
                        td {{result.firstname + " " + result.lastname}}
                        td {{result.location}}
                        td {{result.education}}
                        td {{result.specialties}}

        footer
            #contact_us
                a(target="_blank" href='#') Contact Us
            p Toronto Tutor @ 2016. All rights reserved.

